<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Theme.TaskMaster.Night" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color for night mode. -->
        <item name="colorPrimary">@color/dark_green_primary</item>
        <item name="colorPrimaryVariant">@color/dark_green_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color for night mode. -->
        <item name="colorSecondary">@color/dark_brown_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_brown_secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color for night mode. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize other attributes for night mode here. -->
    </style>
</resources>
